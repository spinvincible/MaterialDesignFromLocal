<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sliding_tabs_library"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.geekyapps.materialdesign.SlidingTabsLibraryActivity">

    <include
        android:id="@+id/toolBarSliding"
        layout="@layout/app_bar" />

    <it.neokree.materialtabs.MaterialTabHost
        android:id="@+id/materialTabHost"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:accentColor="@color/colorAccent"
        app:primaryColor="@color/colorPrimary"
        app:textColor="#FFFFFF" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pagerViewSlidingLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>
